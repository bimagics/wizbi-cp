{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      { "source": "/admin/**", "headers": [{ "key": "Cache-Control", "value": "no-store" }] }
    ],
    "rewrites": [
      { "source": "/admin/**", "destination": "/admin/index.html" },

      { "source": "/health", "run": { "serviceId": "cp-unified-qa", "region": "europe-west1" } },
      { "source": "/me",     "run": { "serviceId": "cp-unified-qa", "region": "europe-west1" } },
      { "source": "/tenants/**", "run": { "serviceId": "cp-unified-qa", "region": "europe-west1" } },

      { "source": "/whatsapp/webhook", "run": { "serviceId": "cp-unified-qa", "region": "europe-west1" } }
    ]
  }
}
